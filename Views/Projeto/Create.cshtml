@model ProjetoTarefas.Models.Projeto
@{
    ViewData["Title"] = "Novo Projeto";
}

<h2>Novo Projeto</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cliente"></label>
        <input asp-for="Cliente" class="form-control" />
        <span asp-validation-for="Cliente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataInicio"></label>
        <input asp-for="DataInicio" class="form-control" type="date" />
        <span asp-validation-for="DataInicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataTermino"></label>
        <input asp-for="DataTermino" class="form-control" type="date" />
        <span asp-validation-for="DataTermino" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@*Scripts necessários para validar formulários no navegador do usuário*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
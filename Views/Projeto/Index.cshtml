@model IEnumerable<ProjetoTarefas.Models.Projeto>
@{
    ViewData["Title"] = "Projetos";
}

<h2>Projetos</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Novo Projeto</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cliente</th>
            <th>Início</th>
            <th>Término</th>
            <th>Opções</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var projeto in Model)
        {
            <tr>
                <td>@projeto.Nome</td>
                <td>@projeto.Cliente</td>
                <td>@projeto.DataInicio.ToShortDateString()</td>
                <td>@(projeto.DataTermino?.ToShortDateString() ?? "-")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@projeto.Id" class="btn btn-info btn-sm">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@projeto.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@projeto.Id" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>